<div class="container">
  <h2>Edit Post</h2>

  <form action="/blog/edit/{{_id}}" method="POST">
    <div class="mb-3">
      <label for="title">Post title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value="{{title}}"
      />
    </div>
    <div class="mb-3">
      <label for="content">Post content</label>
      <textarea
        name="content"
        id="content"
        class="form-control"
        rows="3"
      >{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>